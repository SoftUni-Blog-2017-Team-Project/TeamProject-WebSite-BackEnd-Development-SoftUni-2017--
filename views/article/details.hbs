<div id="index-banner top" class="parallax-container">
    <div class="section no-pad-bot">
        <div class="container">
            <br><br>
            <h1 class="header center teal-text text-lighten-2">Express yourself.</h1>
            <div class="row center">
                <h5 class="header col s12 light">Share your thoughts with us.</h5>
            </div>
            <div class="row center">
                <a href="/article/create" id="download-button" class="btn-large waves-effect waves-light teal lighten-1 card-panel hoverable">New Post</a>
            </div>
            <br><br>

        </div>
    </div>
    <div class="parallax"><img src="/stylesheets/images/background5.jpg" alt="Unsplashed background img 1"></div>
</div>
<div class="container body-content">
    <div class="row">
        <div class ="col-md-12 hoverable">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>
                <p>
                    {{content}}
                </p>
                <small class="author">
                   Author:  <b>{{author.fullName}}</b>
                </small>
                <small class="author">
                    Date published: <b>{{date}}</b>
                </small>
                <footer>
                    <div class="fixed-action-btn horizontal">
                        <a class="btn-floating btn-large green darken-3">
                            <i class="large material-icons">view_headline</i>
                        </a>
                        <ul>
                            <li><a class="btn-floating red"><i class="material-icons">delete</i></a></li>
                            <li><a class="btn-floating yellow darken-1"><i class="material-icons">mode_edit</i></a></li>
                            <li><a class="btn-floating green"><i class="material-icons">publish</i></a></li>
                            <li><a class="btn-floating blue"><i class="material-icons">attach_file</i></a></li>
                        </ul>
                    </div>

                </footer>
            </article>
        </div>
    </div>
</div>